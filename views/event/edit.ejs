<%- include('../partials/header.ejs') %>

    <!-- START BODY CONTENT -->
    <div class="container m-5">
        <form method = "POST" enctype="multipart/form-data" action = "/event/<%= event.id%>?_method=PUT">
            <!-- Title infobox -->
            <div class="form-group pb-2">
                <label for="title">Event Name:</label>
                <textarea class="form-control" id="title" name="title" value = "<%= event.title%>" rows="1" required><%= event.title%></textarea>
            </div>
            <!-- Details infobox -->
            <div class="form-group pb-2">
                <label for="details">Event Details:</label>
                <textarea class="form-control" id="details" name="details" value = "<%= event.details%>" rows="3" required><%= event.details%></textarea>
            </div>
            <!-- Dropdown -->
            <div class="form-group pb-2">
                <label for="category">Event Type:</label>
                <select class="form-control" id="category" name="category" required>
                    
                    <option value="Coffee Tasting" >Coffee Tasting</option>
                    <option value="Latte Art Masterclass">Latte Art Masterclass</option>
                    <option value="New Roast Launch">New Roast Launch</option>
                    <option value="New Cafe Opening">New Cafe Opening</option>
                    <option value="Sale">Sale</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <div class="form-group pb-2">
                <label for="location">Location:</label>
                <textarea class="form-control" id="location" name="location" value = "<%= event.location%>" rows="1" required><%= event.location%></textarea>
            </div>
            
            <div class="form-group pb-2">
                <label for="start_datetime">Event Start:</label>
                <input class="form-control" type="datetime-local" id="start_datetime" value = "<%= startISO%>" name="start_datetime" required>
            </div>
            <div class="form-group pb-2">
                <label for="end_datetime">Event End:</label>
                <input class="form-control" type="datetime-local" id="end_datetime" value = "<%= endISO%>" name="end_datetime" required>
            </div>
            <div class="form-group pb-2">
                <label for="image">Select Image:</label>
                <input class="form-control" type="file" id="image" name="image" accept="image/*" required>
            </div>
            <input class="btn btn-primary mt-3 text-right" type="submit" value="Submit" enctype="multipart/form-data" formmethod = "POST" formaction = "/event/<%= event.id%>?_method=PUT">
        </form>
    </div>
    
    <!-- END BODY CONTENT -->
<%- include('../partials/footer.ejs') %>